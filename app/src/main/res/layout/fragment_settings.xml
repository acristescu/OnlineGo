<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOffWhite"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="24dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/iconContainer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="50dp"
            app:cardElevation="2dp"
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_person_outline"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MrAlex"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/subscribeButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:text="Become a Supporter"
            style="@style/SupporterButton"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_marginTop="54dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#9B9B9B"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            app:cardBackgroundColor="@color/panelBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/notificationsButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="System notifications"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_notifications"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="?android:selectableItemBackground"
                    />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/vibrateButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Vibrate when opponent moves"
                    android:paddingRight="12dp"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableLeft="@drawable/ic_vibrate"
                    android:checked="true"
                    />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/soundButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Stone sounds"
                    android:paddingRight="12dp"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableLeft="@drawable/ic_sound"
                    android:checked="true"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#9B9B9B"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/panelBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/themeButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Theme\nSystem"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_theme"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:clickable="true"
                    android:background="?android:selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/boardBackgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_board_setting"
                    android:drawablePadding="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="24dp"
                    android:text="Board theme\nWood" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Settings"
            android:layout_marginTop="54dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#9B9B9B"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/panelBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/coordinates"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Show coordinates"
                    android:paddingRight="12dp"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:drawableLeft="@drawable/ic_coordinates"
                    android:fontFamily="sans-serif-medium"
                    android:checked="true"
                    />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ranks"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Show player ranks"
                    android:paddingRight="12dp"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:drawableLeft="@drawable/ic_badge"
                    android:fontFamily="sans-serif-medium"
                    android:checked="true"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:layout_marginTop="54dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#9B9B9B"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/panelBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Logout"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_logout"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="?android:selectableItemBackground"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginTop="54dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#9B9B9B"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/panelBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/aboutButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="About app"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_info"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="?android:selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/privacyPolicyButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Privacy policy"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_privacy_policy"
                    android:paddingLeft="24dp"
                    android:drawablePadding="24dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="?android:selectableItemBackground"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>