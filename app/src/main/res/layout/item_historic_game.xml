<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:selectableItemBackground"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/board_card"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <io.zenandroid.onlinego.views.BoardView
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/opponent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="75dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/board_card"
        app:layout_constraintLeft_toLeftOf="@id/board_card"
        tools:text="Bula Bistrucizatorul"
        />

    <TextView
        android:id="@+id/outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/opponent_name"
        app:layout_constraintLeft_toLeftOf="@id/opponent_name"
        tools:text="Won"
        />

</androidx.constraintlayout.widget.ConstraintLayout>